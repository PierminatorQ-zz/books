<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Mi Biblioteca</h1>
  
  <%= search_form_for @q do |f| %>


  <div class="form-group">
<%= f.label :state_eq, "Status" %>
<%= f.select :state_eq, options_for_select(Book.statuses.keys ,
@q.state_eq), { include_blank:true },{class: "form-control"} %>
</div>

  <%= f.submit "Search", class: "btn btn-primary" %>

<% end %>

  <table class="table table-striped table-bordered mt-5">
    <thead class="thead-dark">
      <tr>
        <th><%= sort_link(@q, :title , "Titulo") %> </th>
        <th>Autor</th>
        <th>Estado</th>
        <th>Fecha Prèstamo</th>
        <th>Fecha Devoluciòn</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.author %></td>
          <td><%= book.state %></td>
          <td><%= book.lend_date %></td>
          <td><%= book.return_date %></td>
          <td><%= link_to 'Show', book %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Book', new_book_path %>

</div>
